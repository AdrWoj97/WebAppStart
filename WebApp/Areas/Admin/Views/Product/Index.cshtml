@model List<Product>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Tworzenie kategorii</h2>
        </div>
    </div>
    <div class="card-body p-4">
    </div>
</div>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista produktów
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Nowy produkt
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Tytuł
                </th>
                <th>
                    Opis
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Cena
                </th>
                <th>
                    Cena 1-50
                </th>
                <th>
                    Cena 50+
                </th>
                <th>
                    Cena 100+
                </th>
                <th>
                    ISBN
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.ISBN))
            {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        @obj.ListPrice
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.Price50
                    </td>
                    <td>
                        @obj.Price100
                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action = "Edit" asp-route-id = "@obj.ProductId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edytuj
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
