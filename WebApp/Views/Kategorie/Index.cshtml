@model List<Kategorie>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista kategorii
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kategorie" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Nowa kategoria
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nazwa kategorie
                </th>
                <th>
                    Kolejność wyświetlania
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Kategorie" asp-action = "Edit" asp-route-id = "@obj.KategorieId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edytuj
                            </a>
                            <a asp-controller="Kategorie" asp-action="Delete" asp-route-id="@obj.KategorieId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
