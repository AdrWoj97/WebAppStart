@model List<Kategorie>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista kategorii
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kategorie" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Nowa kategoria
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nazwa kategorie
                </th>
                <th>
                    Kolejność wyświetlania
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>
