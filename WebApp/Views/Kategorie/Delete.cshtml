@model Kategorie
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white">Edytowanie kategorii</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="KategorieId" hidden />
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="DisplayOrder" class="p-1"></label>
                    <input asp-for="DisplayOrder" class="form-control" disabled />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Usuń kategorię</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Kategorie" asp-action="Index" class="btn btn-secondary form-control">
                            Powrót
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
