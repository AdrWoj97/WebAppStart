@model Kategorie

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Tworzenie kategorii</h2>
        </div>
        <div class="mb-3 row">
            <label class="p-0">Nazwa kategorii</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label class="p-1">Kolejność wyświetlania</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Utwórz</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Kategorie" asp-action="Index" class="btn btn-secondary form-control">
                    Powrót
                </a>
            </div>
        </div>
    </div>
</form>